<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.interventions.InterventionsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:text="Interventions"
                    android:textAlignment="center"
                    android:textSize="34sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/chart" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2_1"
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:layout_weight="0"
                        android:src="@drawable/shield_blue" />

                    <TextView
                        android:id="@+id/today"
                        android:layout_width="76dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="Today:"
                        android:textAlignment="inherit"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textViewInputToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="51"
                        android:text=" 0"
                        android:textAlignment="inherit"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2_12"
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:layout_weight="0"
                        android:src="@drawable/shield_blue" />

                    <TextView
                        android:id="@+id/average"
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Average:"
                        android:textAlignment="inherit"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textViewInputAvg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="51"
                        android:text=" 0"
                        android:textAlignment="inherit"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2_11"
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:layout_weight="0"
                        android:src="@drawable/shield_blue" />

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="11"
                        android:text="Total:"
                        android:textAlignment="inherit"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textViewInputTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="51"
                        android:text=" 0"
                        android:textAlignment="inherit"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_weight="1"
                        android:src="@drawable/wand_blue" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_weight="1"
                        android:src="@drawable/shield_blue" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_weight="1"
                        android:src="@drawable/ghost" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Current Status: Strong protection"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="28sp"
                    android:layout_weight="1"
                    android:progress="80" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:text="" />

                <androidx.constraintlayout.widget.Barrier
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:minHeight="50dp"
                    app:barrierDirection="left" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="20sp"
                        android:layout_height="64sp"
                        android:layout_weight="1"
                        android:src="@drawable/quest" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="64sp"
                        android:layout_weight="2"
                        android:text="Patronus Quests"
                        android:textAlignment="center"
                        android:textSize="36sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/blue_patronus"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextTextPersonName"
                        android:layout_width="100sp"
                        android:layout_height="120sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="①"
                        android:textSize="36sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="Step Quest"
                            android:textAlignment="center"
                            android:textSize="28sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/StepsTodayInput"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1000"
                                android:textAlignment="center"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="of"
                                android:textAlignment="center"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/StepsTotalPerDayPrescribed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1000"
                                android:textAlignment="center"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/textfieldX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Steps done."
                                android:textAlignment="center"
                                android:textSize="28sp" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/editInput_Points"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textAlignment="center"
                                android:textSize="28sp"/>

                            <TextView
                                android:id="@+id/editInput_Points2"
                                android:layout_width="1sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="of"
                                android:textAlignment="center"
                                android:textSize="28sp"/>
                            <TextView
                                android:id="@+id/editInput_Points3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="20"
                                android:textAlignment="center"
                                android:textSize="28sp"/>
                            <TextView
                                android:id="@+id/editInput_Points4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Points."
                                android:textAlignment="center"
                                android:textSize="28sp"/>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewSpacer2"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:text=""
                    android:textAlignment="viewStart" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85sp"
                    android:layout_weight="1"
                    android:background="@color/blue_patronus"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextTextPersonNameQ2"
                        android:layout_width="100sp"
                        android:layout_height="85sp"
                        android:layout_weight="1"
                        android:height="80sp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="②"
                        android:textSize="36sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView9_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="Exploration Quest"
                            android:textAlignment="center"
                            android:textSize="28sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/StepsTodayInput_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textAlignment="center"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/textView11_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="of"
                                android:textAlignment="center"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/StepsTotalPerDayPrescribed_21_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="20"
                                android:textAlignment="center"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/StepsTotalPerDayPrescribed_21"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Exploration points."
                                android:textAlignment="center"
                                android:textSize="28sp" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewSpacer"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:text="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_weight="1"
                    android:background="@color/blue_patronus"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextTextPersonNameQ222"
                        android:layout_width="100sp"
                        android:layout_height="120sp"
                        android:layout_weight="1"
                        android:height="160sp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="③"
                        android:textSize="36sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView9_22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="Breathing Mindfullness"
                            android:textAlignment="center"
                            android:textSize="28sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView11_2222"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Automatically detected:"
                                android:textAlignment="center"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/textView11_22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textAlignment="center"
                                android:textSize="28sp" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView11_222"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Points: "
                                android:textAlignment="center"
                                android:textSize="28sp" />
                            <TextView
                                android:id="@+id/PointsForBreathe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textAlignment="center"
                                android:textSize="28sp" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="6" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewSpacer3"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:text="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/blue_patronus"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextTextPersonNameQ22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:height="200sp"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:text="...\nThese are all the available Quests\nfor you provided by Dr. HackZurich.\n\nKeep up the good work!\n..."
                        android:textAlignment="center"
                        android:textSize="26sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="250sp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>